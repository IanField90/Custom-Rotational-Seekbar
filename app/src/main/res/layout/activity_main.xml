<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#000000">

    <com.ianfield.customviewexample.views.RotationalSeekView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rotationalSeek"
        custom:showLengthText="true"
        custom:showProgressText="true"
        custom:labelPosition="center"
        custom:currentProgress="10"
        custom:maxProgress="150"
        custom:trackColor="#ccfdc01a"
        custom:progressColor="#aa1f67"
        />

</RelativeLayout>
